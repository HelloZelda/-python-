print("1.练习模式")
print("2.测试模式")
print("3.历史记录")
a=int(input())
if a == 1:
    print("模式未开发!")
    print("\n")
elif a == 3:
    f = open("sampleList.txt", "r")
    table = f.read()
    f.close()
    print(table)
elif a == 2:
    print("现支持0到9的加法")
    print("输入题目数量")
    n=int(input())
    sum=0
    for i in range(n):
        import random
        sum1 = (random.randint(0, 9))
        sum2 = (random.randint(0, 9))
        sum3 = sum1 + sum2
        print(sum1, " + ", sum2, " = ")
        ans = int(input())
        if sum3 == ans:
            print("正确!")
            sum += 1
        else:
            print("错误")
    print("总题数:",n)
    print("正确题数:",sum)
    SUM = str(sum)
    print("错误题数:",n-sum)
    name=input("你的姓名:")
    ipTable = [name+" 正确题数:"+SUM+"总题数:"+n]
    fileObject = open('sampleList.txt', 'w')
    for ip in ipTable:
        fileObject.write(str(ip))
        fileObject.write('\n')
    fileObject.close()

else :
    print("模式未开发!")
